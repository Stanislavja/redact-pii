{
  "compilerOptions": {
    "target": "es2016",
    "module": "umd",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": false,
    "declaration": false,
    "sourceMap": true,
    "noEmit": false,
    "inlineSources": false,
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": false
  },
  "include": ["src/**/*.ts"]
}
